<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
	<class name="com.qhit.lh.g4.xjl.t4.bean.Emp" table="t_emp">
		<id name="eid" column="eid" type="integer">
			<!--自增方式-->
			<generator class="native"></generator>
		</id>
		<!-- 普通成员的映射 -->
		<property name="empName" column="empName" type="string"></property>
		<property name="empSex" column="empSex" type="string"></property>
		<property name="birthday" column="birthday" type="string"></property>
		<property name="deptId" column="deptId" type="integer" insert="false" update="false"></property>
		<!-- 一对一关系映射 -->
		<one-to-one name="userInfo" class="com.qhit.lh.g4.xjl.t4.bean.UserInfo" cascade="all"></one-to-one>
		<!-- 多对一关系映射 -->
		<many-to-one name="dept" class="com.qhit.lh.g4.xjl.t4.bean.Dept" column="deptid" lazy="false"></many-to-one>
	</class>
	
</hibernate-mapping>
